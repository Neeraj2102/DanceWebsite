extends base.pug
block scripts
     script(src='/static/index.js')

block style 
    style
      include ../static/style.css
      include ../static/styleContact.css

block content 
    div.container
        h1 Contact us
        form(action="/contact" method="post" class="myForm")
            input(type="name" class="myInput" name="name" placeholder="enter your name")
            input(type="phone" class="myInput" name="phone" placeholder="enter your phone number")
            input(type="email" class="myInput" name="email" placeholder="enter your email")
            input(type="address" class="myInput" name="address" placeholder="enter your address")
            input(type="concern" class="myInput" name="concern" placeholder="enter your concern")
            button(class="btn")
            |  Submit  